<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.myOwnPath</groupId>
  <artifactId>hbase-test</artifactId>
  <version>1.0</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>3.2.2</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
              <goal>testCompile</goal>
            </goals>
            <configuration>
              <args>
                <arg>-dependencyfile</arg>
                <arg>${project.build.directory}/.scala_dependencies</arg>
              </args>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <relocations>
                <relocation>
                  <pattern>com.google.protobuf</pattern>
                  <shadedPattern>shaded.com.google.protobuf</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>product</id>
      <build>
        <resources>
          <resource>
            <directory>src/main/resources/product</directory>
          </resource>
        </resources>
      </build>
      <properties>
        <snapped.driver.ping.s3.output>s3://myOwnPathtaxi-geo-metric-report/snapped-driver-ping-stream</snapped.driver.ping.s3.output>
        <snapped.driver.ping.topic>prd-snapped-driver-speed-array</snapped.driver.ping.topic>
        <snapped.driver.ping.checkpoint.mark3.path>/tmp/streaming-prd/snapped/mark3</snapped.driver.ping.checkpoint.mark3.path>
        <snapped.driver.ping.dynamodb.batch.number>25</snapped.driver.ping.dynamodb.batch.number>
        <snapped.driver.ping.brokers>kafka-cluster-non-critical-01.myteksi.net:9092,kafka-cluster-non-critical-02.myteksi.net:9092,kafka-cluster-non-critical-03.myteksi.net:9092,kafka-cluster-non-critical-04.myteksi.net:9092,kafka-cluster-non-critical-05.myteksi.net:9092</snapped.driver.ping.brokers>
        <snapped.driver.ping.checkpoint.mark1.path>/tmp/streaming-prd/snapped/mark1</snapped.driver.ping.checkpoint.mark1.path>
        <redis.host>prd-gps-quality-ms.pcxebj.ng.0001.apse1.cache.amazonaws.com</redis.host>
        <redis.batch.number>5000</redis.batch.number>
        <redis.port>6379</redis.port>
        <snapped.driver.ping.checkpoint.mark2.path>/tmp/streaming-prd/snapped/mark2</snapped.driver.ping.checkpoint.mark2.path>
      </properties>
    </profile>
    <profile>
      <id>grey</id>
      <build>
        <resources>
          <resource>
            <directory>/Users/congshuo.geng/hbase-test/src/main/resources/test</directory>
          </resource>
        </resources>
      </build>
      <properties>
        <snapped.driver.ping.s3.output>s3://myOwnPathtaxi-geo-metric-report/stg/snapped-driver-ping-stream</snapped.driver.ping.s3.output>
        <snapped.driver.ping.topic>stg-snapped-driver-speed-array</snapped.driver.ping.topic>
        <snapped.driver.ping.checkpoint.mark3.path>/tmp/streaming/snapped/mark3</snapped.driver.ping.checkpoint.mark3.path>
        <snapped.driver.ping.dynamodb.batch.number>1</snapped.driver.ping.dynamodb.batch.number>
        <snapped.driver.ping.brokers>end-kafka-loc-01.stg-myteksi.com:9092,end-kafka-loc-02.stg-myteksi.com:9092,end-kafka-loc-03.stg-myteksi.com:9092,end-kafka-loc-04.stg-myteksi.com:9092,end-kafka-loc-05.stg-myteksi.com:9092,end-kafka-loc-06.stg-myteksi.com:9092,end-kafka-loc-07.stg-myteksi.com:9092,end-kafka-loc-08.stg-myteksi.com:9092</snapped.driver.ping.brokers>
        <snapped.driver.ping.checkpoint.mark1.path>/tmp/streaming/snapped/mark1</snapped.driver.ping.checkpoint.mark1.path>
        <redis.host>stg-gps-quality-ms.pcxebj.ng.0001.apse1.cache.amazonaws.com</redis.host>
        <redis.batch.number>5</redis.batch.number>
        <redis.port>6379</redis.port>
        <snapped.driver.ping.checkpoint.mark2.path>/tmp/streaming/snapped/mark2</snapped.driver.ping.checkpoint.mark2.path>
      </properties>
    </profile>
    <profile>
      <id>test</id>
      <build>
        <resources>
          <resource>
            <directory>src/main/resources/test</directory>
          </resource>
        </resources>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Maven Repository Switchboard</name>
      <url>http://repo2.maven.org/maven2</url>
    </repository>
    <repository>
      <id>spark</id>
      <url>https://mvnrepository.com/artifact/org.apache.spark/spark-streaming</url>
    </repository>
  </repositories>
  <properties>
    <scala.version>2.11.7</scala.version>
    <hbase.version>1.3.1</hbase.version>
    <hadoop.version>2.7.3</hadoop.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <spark.version>2.4.0</spark.version>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>

